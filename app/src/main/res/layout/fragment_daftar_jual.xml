<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarJualFragment"
    android:id="@+id/layout_daftarJual">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Daftar Jual Saya"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/custom_layout"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="15dp"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/circular_square" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nama"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penjual"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota"
                android:textSize="10dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_preview"
            android:layout_width="66dp"
            android:layout_height="37dp"
            android:layout_marginRight="10dp"
            android:hint="Edit"
            android:textColorHint="@color/black"
            android:text=""
            android:textSize="14sp"
            android:backgroundTint="@color/dark_purple"
            android:background="@drawable/edit_btn"
            android:backgroundTintMode="src_over"
            android:layout_marginHorizontal="130dp"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_produk"
                android:layout_width="140dp"
                android:layout_height="64dp"
                android:layout_marginRight="10dp"
                android:hint="Produk"
                android:textColorHint="@color/black"
                android:text=""
                android:textSize="14sp"
                android:backgroundTint="@color/light_purple"
                app:cornerRadius="15dp"
                android:drawableLeft="@drawable/ic_box_grey"
                android:backgroundTintMode="src_over"
                android:layout_gravity="center|bottom"/>

            <Button
                android:id="@+id/btn_diminati"
                android:layout_width="140dp"
                android:layout_height="64dp"
                android:layout_marginRight="10dp"
                android:hint="Diminati"
                android:textColorHint="@color/white"
                android:text=""
                android:textSize="14sp"
                android:backgroundTint="@color/dark_purple"
                android:drawableLeft="@drawable/ic_fav_white"
                app:cornerRadius="15dp"
                android:backgroundTintMode="src_over"
                android:layout_gravity="center|bottom"/>

            <Button
                android:id="@+id/btn_terjual"
                android:layout_width="140dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:hint="Terjual"
                android:textColorHint="@color/black"
                android:text=""
                android:textSize="14sp"
                android:backgroundTint="@color/light_purple"
                app:cornerRadius="15dp"
                android:drawableLeft="@drawable/ic_dollar_grey"
                android:backgroundTintMode="src_over"
                android:layout_gravity="center|bottom"/>
        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_product_yet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-150dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>